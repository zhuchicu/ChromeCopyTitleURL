{
  "manifest_version": 3,
  "name": "Copy Page Title",
  "version": "1.0",
  "description": "Copy the current page title to clipboard",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
  },
  "permissions": ["clipboardWrite", "activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
