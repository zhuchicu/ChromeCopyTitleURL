{
  "manifest_version": 3,
  "name": "Copy Page Title",
  "version": "1.0",
  "description": "Copy title and url to clipboard",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*",
      "file:///*/*"
    ],
    "js": [
      "vendors/pangu.min.js"
    ],
  }],
  "commands": {
    "copy-title-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy title and url to clipboard"
    }
  },
  "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
  },
  "permissions": [
      "clipboardWrite", 
      "activeTab", 
      "contextMenus", 
      "scripting",
      "http://*/*",
      "https://*/*",
      "file:///*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
